{
    "name": "ynn",
    "description": "Ynn is a framework for building more flexible and portable web applications.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ynnjs/ynn.git"
    },
    "version": "0.0.60",
    "keywords": [
        "koa",
        "mvc",
        "framework",
        "modules",
        "ynn"
    ],
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.22.0",
        "@typescript-eslint/parser": "^2.22.0",
        "eslint": "^6.8.0",
        "typescript": "^3.8.3"
    },
    "author": "LvChengbin <lvchengbin59@gmail.com>",
    "license": "MIT",
    "dependencies": {},
    "scripts": {
        "test": "jest --forceExit",
        "tw": "jest --watch",
        "test-cov": "jest --coverage --runInBand --forceExit --detectOpenHandles",
        "lint": "eslint lib --cache --ignore-path .eslintignore",
        "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
    },
    "engines": {
        "node": ">=8.0"
    },
    "bugs": {
        "url": "https://github.com/ynnjs/ynn/issues"
    },
    "homepage": "https://github.com/ynnjs/ynn#readme",
    "main": "index.js",
    "directories": {
        "example": "example",
        "lib": "lib",
        "test": "test"
    },
    "jest": {
        "testMatch": [
            "**/test/**/*.spec.js"
        ],
        "coverageReporters": [
            "text-summary",
            "text",
            "lcov"
        ],
        "collectCoverageFrom": [
            "lib/**/*.js"
        ],
        "testEnvironment": "node"
    }
}
