{
    "name": "ynn",
    "description": "Ynn is a framework for building more flexible and portable web applications.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ynnjs/ynn.git"
    },
    "version": "0.0.53",
    "keywords": [
        "koa",
        "mvc",
        "framework",
        "modules",
        "ynn"
    ],
    "devDependencies": {
        "@lvchengbin/sleep": "0.0.2",
        "eslint": "^6.0.0-alpha.0",
        "jest": "^24.7.1",
        "jest-mock-console": "^0.4.2",
        "max-listeners-exceeded-warning": "0.0.1",
        "pre-commit": "^1.2.2",
        "supertest": "^4.0.2",
        "ynn-ms-idalloc": "0.0.4"
    },
    "author": "LvChengbin <lvchengbin59@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@lvchengbin/config": "0.0.2",
        "@lvchengbin/is": "0.0.27",
        "@lvchengbin/koa-router": "0.1.1",
        "@lvchengbin/sequence": "^2.0.1",
        "chalk": "^2.4.2",
        "koa": "^2.7.0",
        "koa-body": "^4.1.0",
        "koa-compose": "^4.1.0",
        "koa-preuse": "0.0.0",
        "koa-sham": "0.0.7",
        "koa-static": "^5.0.0",
        "request": "^2.88.0",
        "stack-trace": "0.0.10",
        "tengine": "0.0.6",
        "winston": "^3.2.1",
        "winston-daily-rotate-file": "^3.9.0",
        "winston-transport": "^4.3.0",
        "yargs": "^13.2.2",
        "ynn-http-assert": "0.0.4"
    },
    "scripts": {
        "test": "jest --forceExit",
        "tw": "jest --watch",
        "test-cov": "jest --coverage --runInBand --forceExit --detectOpenHandles",
        "lint": "eslint lib --cache --ignore-path .eslintignore",
        "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
    },
    "engines": {
        "node": ">=8.0"
    },
    "bugs": {
        "url": "https://github.com/ynnjs/ynn/issues"
    },
    "homepage": "https://github.com/ynnjs/ynn#readme",
    "main": "index.js",
    "directories": {
        "example": "example",
        "lib": "lib",
        "test": "test"
    },
    "jest": {
        "testMatch": [
            "**/test/**/*.spec.js"
        ],
        "coverageReporters": [
            "text-summary",
            "text",
            "lcov"
        ],
        "collectCoverageFrom": [
            "lib/**/*.js"
        ],
        "testEnvironment": "node"
    }
}
